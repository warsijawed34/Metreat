<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding"
    android:clipToPadding="false"
  >


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".10"
                android:src="@drawable/coupon"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin_half"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_half"
                android:layout_weight=".3"
                android:text="@string/couponName"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:text=":"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:id="@+id/tv_CName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight=".30"
                android:textColor="@color/colorBlack"
                android:text=""
                android:singleLine="true"
                android:textSize="@dimen/smallest_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".10"
                android:src="@drawable/price"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin_half"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_half"
                android:layout_weight=".3"
                android:text="@string/couponPrice"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:text=":"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:id="@+id/tv_CPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight=".30"
                android:textColor="@color/colorBlack"
                android:text=""
                android:textSize="@dimen/smallest_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".10"
                android:src="@drawable/calender"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin_half"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_half"
                android:layout_weight=".3"
                android:text="@string/couponBoughtDate"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:text=":"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:id="@+id/tv_coupon_bought_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight=".30"
                android:textColor="@color/colorBlack"
                android:text=""
                android:textSize="@dimen/smallest_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".10"
                android:src="@drawable/username"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin_half"
                android:background="@color/colorGray"/>

            <TextView
                android:id="@+id/tv_receivedFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_half"
                android:layout_weight=".3"
                android:text="@string/giftedTO"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:text=":"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:id="@+id/tv_gifted_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight=".30"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/smallest_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".10"
                android:src="@drawable/calender"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin_half"
                android:layout_marginTop="@dimen/default_margin_half"
                android:background="@color/colorGray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin_half"
                android:layout_weight=".3"
                android:text="@string/birthDayAniv"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin_half"
                android:text=":"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/smallest_text"/>

            <TextView
                android:id="@+id/tv_birthdayAniv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight=".30"
                android:textColor="@color/colorBlack"
                android:text=""
                android:textSize="@dimen/smallest_text"/>
        </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>
    </RelativeLayout>