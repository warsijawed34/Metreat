<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPurple"
        android:orientation="vertical">

      <!--  <ImageView
            android:id="@+id/ivImageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/default_margin_double"
            android:layout_marginRight="@dimen/default_margin_double"/>-->

        <TextView
            android:id="@+id/ivImageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:drawableLeft="@drawable/close"
            android:padding="@dimen/default_margin"
            android:textColor="@color/colorWhite" />

        <com.metreat.imageLoading.ImageViewRounded
            android:id="@+id/ivProfileHeader"
            android:layout_width="@dimen/circular_image_size"
            android:layout_height="@dimen/circular_image_size"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_gravity="center"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin_triple"
            android:text="Hello"
            android:textSize="@dimen/default_margin_extra_large"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</RelativeLayout>