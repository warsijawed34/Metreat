<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:focusableInTouchMode="true"
                android:clipToPadding="false">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/default_margin"
        card_view:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/llChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbarChangePassword"
        android:layout_marginLeft="@dimen/default_margin_extra_large"
        android:layout_marginRight="@dimen/default_margin_extra_large">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cake"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_margin"/>

        <TextView
            android:id="@+id/tvNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfgdfd"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:textSize="@dimen/normal_text"
            android:singleLine="true"
            android:layout_marginTop="@dimen/default_margin_large"/>

        <TextView
            android:id="@+id/tvsendGiftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendGiftText"
            android:layout_gravity="center"
            android:textSize="@dimen/normal_text_minus"
            android:layout_marginTop="@dimen/default_margin_half"/>

        <Button
            android:id="@+id/btnBuyCouponId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buyCoupon"
            android:background="@color/colorPurple"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:textSize="@dimen/normal_text"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
